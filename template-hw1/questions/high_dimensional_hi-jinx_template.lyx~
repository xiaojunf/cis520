\begin_body

\begin_layout Section
High dimensional hi-jinx
\end_layout

\begin_layout Enumerate
Intra-class distance.
 
\begin_inset Formula \begin{align*}
\E[(X-X')^{2}]= & E[X^{2}-2XX^{'}+X^{'2}]\\
= & E[X^{2}]-2E[X]E[X^{'}]+E[X^{2}]\\
= & \mu_{1}^{2}+\sigma^{2}-2\mu_{1}^{2}+\mu_{1}^{2}+\sigma^{2}\\
= & 2\sigma^{2}\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
Inter-class distance.
 
\begin_inset Formula \begin{align*}
\E[(X-X')^{2}]= & E[X^{2}-2XX^{'}+X^{'2}]\\
= & E[X^{2}]-2E[X]E[X^{'}]+E[X^{2}]\\
= & \mu_{1}^{2}+\sigma^{2}-2\mu_{1}\mu_{2}+\mu_{2}^{2}+\sigma^{2}\\
= & (\mu_{1}-\mu_{2})^{2}+2\sigma^{2}\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
Intra-class distance, m-dimensions.
 
\begin_inset Formula \begin{align*}
\E[\sum_{j=1}^{m}(X_{j}-X'_{j})^{2}]= & \sum_{j=1}^{m}E[(X_{j}-X_{j}^{'})^{2}]\\
= & 2m\sigma^{2}\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
Inter-class distance, m-dimensions.
 
\begin_inset Formula \begin{align*}
\E[\sum_{j=1}^{m}(X_{j}-X'_{j})^{2}]= & \sum_{j=1}^{m}E[(X_{j}-X_{j}^{'})^{2}]\\
= & \sum_{j=1}^{m}(\mu_{1j}-\mu_{2j})^{2}+2m\sigma^{2}\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
The ratio of expected intra-class distance to inter-class distance is: 
\begin_inset Formula $\frac{2m\sigma^{2}}{(\mu_{11}-\mu_{21})^{2}+2m\sigma^{2}}$
\end_inset

.
 As 
\begin_inset Formula $m$
\end_inset

 increases towards 
\begin_inset Formula $\infty$
\end_inset

, this ratio approaches 1.
 
\end_layout

\end_body
